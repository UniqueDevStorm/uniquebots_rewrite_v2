{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": ".next/production-server",
    "declaration": true,
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "isolatedModules": false,
    "noEmit": false,
    "allowJs": false,
    "paths": {
      "@styles/*": ["styles/*"],
      "@components/*": ["components/*"],
      "@types/*": ["types/*"]
    },
    "baseUrl": "."
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
